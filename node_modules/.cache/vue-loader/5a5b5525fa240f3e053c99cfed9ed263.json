der.scrollLeft - slider.clientWidth > 1;\n      }\n    },\n\n    isSliderOverflowing() {\n      const slider = this.$refs.slider as HTMLDivElement;\n      if (slider) {\n        return slider.scrollWidth > slider.clientWidth;\n      }\n      return false;\n    }\n  }\n});\n</script>\n\n<style scoped lang=\"scss\">\n::v-deep {\n  .app-carousel {\n    position: relative;\n\n    width: 100%;\n\n    &__slider {\n      display: flex;\n      align-items: center;\n\n      flex-grow: 1;\n\n      overflow-x: scroll;\n      -ms-overflow-style: none;\n      scrollbar-width: none;\n\n      &::-webkit-scrollbar {\n        display: none;\n      }\n\n      @media screen and (min-width: 769px) {\n        //overflow-x: initial;\n      }\n    }\n\n    &__button {\n      display: flex;\n      justify-content: center;\n      align-items: center;\n\n      width: 45px;\n      height: 45px;\n\n      margin: 0 .5rem;\n\n      span {\n        color: #fff;\n      }\n    }\n  }\n}\n</style>"]}]}